{
    "manifest_version": 2,
    "name": "My Extension",
    "description": "Hi Chrome",
    "version": "1.0.1",
    "browser_action":{
        "default_popup": "src/popup.html"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["dist/src/ContentsScript.js"],
        "run_at": "document_start"
    }],
    "background": {
        "scripts": ["dist/src/BackGroundScript.js"],
        "persistent": false
    },
    "permissions": [
        "storage",
        "tabs"
    ]
}